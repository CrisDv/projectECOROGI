<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Vinotino</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/Vinotino</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_img_inicio_app</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="ThemeFull" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/Vinotino</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>

    </style>

    <style name="PopUpHistorial" parent="AppTheme.NoActionBar">
        <item name="android:popupBackground">#D6000000</item>

        <item name="android:alpha">60</item>
    </style>
</resources>
