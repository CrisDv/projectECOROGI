<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragECO">


    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/street"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:backgroundTint="@color/White"
                android:text="@string/direccion"
                android:textColor="@color/Vinotino"
                android:textSize="15sp" />
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ofertas"
                        android:layout_width="match_parent"
                        android:background="@drawable/marca1"
                        android:layout_height="55dp"
                        android:contentDescription="@string/categoria_del_producto" />

                    <ImageView
                        android:id="@+id/categoria"
                        android:layout_width="match_parent"
                        android:background="@drawable/marca2"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/categoria_del_producto"/>


                    <ImageView
                        android:id="@+id/categoria2"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/marca2"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/categoria_del_producto"/>


                    <ImageView
                        android:id="@+id/categoria3"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/marca2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/categoria_del_producto"/>


                    <ImageView
                        android:id="@+id/categoria4"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/marca2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/categoria_del_producto"/>

                </LinearLayout>
                <!-- Right side spacer -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/categoria7"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/marca2"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/categoria_del_producto"
                            tools:ignore="NestedWeights" />

                        <ImageView
                            android:id="@+id/categoria8"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/marca2"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/categoria_del_producto"/>


                        <ImageView
                            android:id="@+id/categoria9"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/marca2"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/categoria_del_producto"/>

                        <ImageView
                            android:id="@+id/categoria10"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/marca2"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/categoria_del_producto"/>
                        <ImageView
                            android:id="@+id/categoria11"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/marca2"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/categoria_del_producto"/>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>